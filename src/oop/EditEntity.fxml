<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="195.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.EditEntity">
   <children>
      <ImageView fitHeight="260.0" fitWidth="411.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Entities/fxml/bckg.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="input" layoutX="57.0" layoutY="28.0" prefHeight="25.0" prefWidth="298.0" promptText="Введіть текст або число" />
      <RadioButton fx:id="radioHp" layoutX="290.0" layoutY="167.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="80.0" text="Життя" textFill="WHITE">
         <toggleGroup>
            <ToggleGroup fx:id="radios" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="radioDamage" layoutX="290.0" layoutY="206.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="59.0" text="Шкода" textFill="WHITE" toggleGroup="$radios" />
      <RadioButton fx:id="radioName" layoutX="290.0" layoutY="129.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="59.0" text="Назву" textFill="WHITE" toggleGroup="$radios" />
      <Label fx:id="whatChange" layoutX="267.0" layoutY="90.0" text="Що змінити?" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="back" layoutX="14.0" layoutY="211.0" mnemonicParsing="false" onAction="#back" text="Назад" />
      <Button layoutX="103.0" layoutY="210.0" mnemonicParsing="false" onAction="#confirm" prefHeight="27.0" prefWidth="49.0" text="ОК" />
      <Label fx:id="labelChanged" layoutX="39.0" layoutY="90.0" text="Змінено!" textFill="WHITE">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label fx:id="labelWhat" layoutX="43.0" layoutY="129.0" prefHeight="17.0" prefWidth="49.0" />
   </children>
</AnchorPane>
